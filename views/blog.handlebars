<div class='text-center'>
  <h2 class="blogtitle">{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

 <div class='comments'>
    {{#each comments as |comment|}}
      <div class='comment'>
        <p class='comment-content'>{{comment.text}}</p>
        <p class='comment-details'>{{comment.user.name}}
          {{format_date comment.date_created}}</p>
      </div>
    {{/each}}
  </div>

  <form class='form new-comment-form'>
      <div class='form-group'>
        <input value='{{id}}' type='hidden' name='blog_id' /> 
        <label for='comment-text'>ğŸ’¬ Comment:</label>
        <textarea class='form-input' id='comment-desc' name='comment-desc'></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Create</button>
      </div>
    </form>
  </div>
</div>


<script src='../js/blog.js'></script>
