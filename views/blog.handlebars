<div class='text-center'>
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  <p>
    <button class='btn btn-primary'>COMMENT</button>
  </p>
  <div>
    {{#each blog.comments as |comment|}}
      {{comment.text}}
    {{/each}}
  </div>
</div>